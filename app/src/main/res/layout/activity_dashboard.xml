<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".DashboardActivity">
    <ScrollView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textAllCaps="true"
                                android:textAlignment="center"
                                android:text="Isi Data Diri Dengan Lengkap"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:text="Nama Lengkap"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <EditText
                                android:textColor="#fff"
                                android:id="@+id/namaLengkap"
                                android:padding="10dp"
                                android:hint=""
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:text="Tanggal Lahir"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <EditText
                                android:textColor="#fff"
                                android:id="@+id/tglLahir"
                                android:padding="10dp"
                                android:hint=""
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:text="Gender"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <RadioGroup
                                android:outlineSpotShadowColor="#fff"
                                android:id="@+id/gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <RadioButton
                                    android:layout_marginRight="30dp"
                                    android:checked="false"
                                    android:text="Laki-laki"
                                    android:textColor="#fff"
                                    android:textSize="18dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"/>
                            <RadioButton
                                    android:checked="false"
                                    android:text="Perempuan"
                                    android:textColor="#fff"
                                    android:textSize="18dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"/>

                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:text="Jawab Pertanyaan Berikut ini!"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:text="Bahasa apa yang harus di kuasai programer?"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#ef971c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:textSize="18dp"
                                android:layout_marginTop="10dp"
                                android:text="Isi jawaban Anda :"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="#fff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <EditText
                                android:layout_marginTop="10dp"
                                android:textColor="#fff"
                                android:id="@+id/jawaban"
                                android:padding="10dp"
                                android:hint=""
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                            <Button
                                    android:layout_marginBottom="30dp"
                                    android:id="@+id/testbtn"
                                    android:text="TEST GAN"
                                    android:textColor="#fff"
                                    android:background="@drawable/button_login"
                                    android:fontFamily="sans-serif-medium"
                                    android:textSize="18dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"/>
                    </LinearLayout>
                </LinearLayout>
    </ScrollView>
</RelativeLayout>